{
  "name": "koa-cerberus",
  "version": "0.0.0",
  "description": "Koa middleware to use Cerberus",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "types": "dist/defs/index.d.ts",
  "directories": {
    "dist": "dist"
  },
  "scripts": {
    "build": "npm run build:es2015; npm run build:cmjs",
    "build:es2015": "tsc -P ./tsconfig-build.json --outDir 'dist/es' --module es2015",
    "build:cmjs": "tsc -P ./tsconfig-build.json",
    "clean": "rm -rf dist coverage .nyc_output",
    "prepublishOnly": "npm run clean; npm run build",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "release": "np",
    "test": "nyc mocha --timeout 5000 test/*.spec.ts",
    "test:watch": "mocha --reporter spec --watch test/*.spec.ts",
    "codecov": "codecov -f coverage/coverage-final.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jomik/koa-cerberus.git"
  },
  "keywords": [
    "typescript",
    "validate",
    "validator",
    "validation",
    "koa"
  ],
  "author": "Jonas Damtoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jomik/koa-cerberus/issues"
  },
  "homepage": "https://github.com/Jomik/koa-cerberus#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/koa": "^2.0.45",
    "@types/koa-router": "^7.0.28",
    "@types/mocha": "^5.0.0",
    "@types/sinon": "^5.0.0",
    "@types/sinon-chai": "^2.7.32",
    "cerberus": "^1.0.3",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "koa": "^2.5.1",
    "koa-router": "^7.4.0",
    "mocha": "^5.0.5",
    "np": "^3.0.0",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "sinon": "^5.0.10",
    "sinon-chai": "^3.1.0",
    "source-map-support": "^0.5.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "arrowParens": "always"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "lcov"
    ]
  },
  "peerDependencies": {
    "cerberus": ">= 1.0.3 < 2",
    "koa": "2.x"
  },
  "dependencies": {
    "@types/supertest": "^2.0.4",
    "koa-bodyparser": "^4.2.1",
    "supertest": "^3.1.0"
  }
}
